//-------------------------------------------

var lados = 8 

if (lados == 3) {
  console.log("Triângulo")
}
else if (lados == 4) {
  console.log("Quadrado")
}
else if (lados == 5) {
  console.log("Pentágono")
}
else if (lados > 5) {
  console.log("Polígono Não identificado")
}
else {
  console.log("Não é Um Polígono")
}

