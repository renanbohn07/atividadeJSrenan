//---------------------------

var a = 8;
var b = 5;
var c = -25;
var coef1;
var coef2;

var delta = (b * b) - 4 * a *c;

console.log("delta = "+delta)

coef1 = (-b + Math.sqrt(delta)) / (2*a);
coef2 = (-b - Math.sqrt(delta)) / (2*a);


console.log("coeficiente 1 = "+ coef1);
console.log("coeficiente 2 = "+ coef2);


