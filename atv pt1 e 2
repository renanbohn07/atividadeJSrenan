let estado = "RO"
switch (estado) {
    case "RO" :
        console.log("corresponde a Rondonia")
        break
        case "SP":
            console.log("corresponde a Sao Paulo")
            break
            case "ZT" :
                console.log("nao corresponde a nenhum estado")
                break}


